pipeline {
    agent {
        kubernetes {
            defaultContainer 'dotnet-sdk'
            yamlFile '_build/KubernetesPod.yaml'
        }
    }

    stages {
        stage('Build') {
            steps {
                sh 'dotnet build src/ChessWithActors/ChessWithActors.sln -c Release'
            }
        }

        stage('Test') {
            steps {
                sh 'dotnet test src/ChessWithActors/ChessWithActors.Backend.Tests/ChessWithActors.Backend.Tests.csproj -c Release --no-build'
            }
        }
    }
}